<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ham" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="Theme.ham.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="Theme.ham.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="Theme.ham.ActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="appBarLayoutStyle">@style/TranslationBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="TranslationBar" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/grey_background</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/main_color</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/main_color</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

</resources>