<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="188dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    tools:context=".fragment.GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        tools:context=".fragment.GameFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ticket_status_fragment"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:name="com.ham.onettsix.fragment.TicketStatusFragment"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:layout_marginTop="20dp"
            android:lineHeight="32dp"
            android:text="@string/game_daily_title"
            android:textColor="@color/text_black"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ticket_status_fragment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_daily_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:lineHeight="24dp"
            android:text="@string/game_daily_title_info"
            android:textColor="@color/text_black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_daily_title" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/rps_game_fragment"
            android:name="com.ham.onettsix.fragment.RPSGameFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/game_daily_title_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_attendance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:lineHeight="32dp"
            android:text="@string/attend_title"
            android:textColor="@color/text_black"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rps_game_fragment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_attendance_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:lineHeight="24dp"
            android:text="@string/attend_sub_title"
            android:textColor="@color/text_black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_attendance_title" />
        
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/attendance_layout"
            android:name="com.ham.onettsix.fragment.AttendFragment"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/game_attendance_title_info"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:lineHeight="32dp"
            android:text="@string/game_rv_title"
            android:textColor="@color/text_black"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attendance_layout" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_rv_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:lineHeight="24dp"
            android:text="@string/game_rv_title_info"
            android:textColor="@color/text_black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_rv_title" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/video_fragment"
            android:name="com.ham.onettsix.fragment.VideoFragment"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/game_rv_title_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_fragment" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
