<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_item_lottery_history_day_str"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/gmarket_sans_ttf_bold"
                android:gravity="center"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_item_lottery_history_episode_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="19,223ëª…"
                android:gravity="center"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_item_lottery_history_total_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_item_lottery_history_winner_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_item_lottery_history_winner_userid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="#1112"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rv_item_lottery_history_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/lottery_history_comment_background"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/text_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>