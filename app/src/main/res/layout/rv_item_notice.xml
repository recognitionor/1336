<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="11dp"
    android:paddingBottom="11dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notice_item_icon_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notice_item_title_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notice_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:lineHeight="32dp"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/notice_item_content_tv"
        app:layout_constraintLeft_toRightOf="@+id/notice_item_icon_img"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notice_item_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/green_02"
        android:text="content"
        android:gravity="center_vertical"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/notice_item_icon_img"
        app:layout_constraintRight_toLeftOf="@+id/notice_item_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/notice_item_title_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notice_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:lineHeight="32dp"
        android:text="time"
        android:textColor="@color/text_grey"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>