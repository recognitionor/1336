<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyProfileFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/profile_img_background"
        android:src="@drawable/ic_profile_dog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:lineHeight="32dp"
        android:text="육뉵이"
        android:textColor="@color/text_black"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@id/profile_image_view"
        app:layout_constraintRight_toRightOf="@id/profile_image_view"
        app:layout_constraintTop_toBottomOf="@id/profile_image_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_today_attend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:lineHeight="32dp"
        android:text="@string/profile_toady_attend"
        android:textColor="@color/text_black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_today_attend_user_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/profile_image_view"
        app:layout_constraintTop_toTopOf="@id/profile_today_attend_user_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_today_attend_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:gravity="center"
        android:lineHeight="48dp"
        android:text="3"
        android:textColor="@color/main_color"
        android:textSize="44dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/profile_today_attend"
        app:layout_constraintRight_toLeftOf="@id/profile_today_attend_divider"
        app:layout_constraintTop_toBottomOf="@id/profile_user_name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_today_attend_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:gravity="center"
        android:lineHeight="48dp"
        android:text="@string/profile_toady_attend_divider"
        android:textColor="@color/text_black"
        android:textSize="44dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_today_attend_user_count"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/profile_today_attend_user_count"
        app:layout_constraintRight_toLeftOf="@+id/profile_today_attend_max_count"
        app:layout_constraintTop_toTopOf="@id/profile_today_attend_user_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_today_attend_max_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:gravity="center"
        android:lineHeight="48dp"
        android:text="10"
        android:textColor="@color/text_black"
        android:textSize="44dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_today_attend_user_count"
        app:layout_constraintLeft_toRightOf="@+id/profile_today_attend_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_today_attend_user_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:lineHeight="32dp"
        android:text="@string/profile_history"
        android:textColor="@color/text_black"
        android:textSize="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_today_attend" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_history_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_history_title" />

</androidx.constraintlayout.widget.ConstraintLayout>