<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyProfileFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/profile_img_background"
        android:src="@drawable/ic_profile_dog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        android:gravity="center"
        android:lineHeight="32dp"
        android:textColor="@color/text_black"
        android:textSize="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/profile_image_view"
        app:layout_constraintTop_toBottomOf="@id/profile_image_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_user_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        android:gravity="center"
        android:lineHeight="32dp"
        android:textColor="@color/caution_grey"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_user_name_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/profile_user_name_tv"
        app:layout_constraintTop_toTopOf="@id/profile_user_name_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_detail_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@id/profile_user_name_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/profile_user_id_tv"
        app:layout_constraintTop_toTopOf="@id/profile_user_name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_ticket_info_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="34dp"
        android:text="@string/profile_ticket_info_message"
        android:textColor="@color/text_grey"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        android:lineHeight="32dp"
        android:text="@string/profile_history"
        android:textColor="@color/text_black"
        android:textSize="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_ticket_info_message" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/warning_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/warning_layout_background"
        android:drawableLeft="@drawable/ic_warning"
        android:lineHeight="24dp"
        android:layout_marginTop="16dp"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:paddingEnd="13dp"
        android:paddingBottom="8dp"
        android:text="@string/profile_warning_message"
        android:textColor="@color/text_black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_history_title" />

    <include
        android:id="@+id/rv_item_header_my_profile_history_include"
        layout="@layout/rv_item_header_my_profile_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/profile_history_rv"
        app:layout_constraintTop_toBottomOf="@+id/warning_text_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_history_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_item_header_my_profile_history_include"
        app:layout_constraintVertical_chainStyle="spread" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_history_rv_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        android:gravity="center"
        android:text="@string/list_empty"
        android:textSize="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warning_text_info" />

</androidx.constraintlayout.widget.ConstraintLayout>