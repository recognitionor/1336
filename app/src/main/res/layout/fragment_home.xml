<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/home_game_progress_title_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.ham.onettsix.view.HomeGameProgressView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.ham.onettsix.view.HomeGameProgressView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </com.ham.onettsix.view.HomeGameProgressView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.ham.onettsix.view.HomeGameProgressView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </com.ham.onettsix.view.HomeGameProgressView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.ham.onettsix.view.HomeGameProgressView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                android:id="@+id/home_game_status_layout"
                layout="@layout/home_game_status_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_remain_drawing_time_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/home_remain_drawing_time_title"
                android:textColor="@color/text_black"
                android:textSize="38dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_status_layout" />

            <com.ham.onettsix.view.RemainTimeView
                android:id="@+id/home_remain_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_remain_drawing_time_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_now_left_chance"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/home_game_status_background"
                android:gravity="center"
                android:lineHeight="32dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/home_game_now_left_chance"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:textColor="@color/text_main_color"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_remain_time_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_ticket_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:lineHeight="32dp"
                android:textColor="@color/text_black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_now_left_chance" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_current_ticket_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:lineHeight="32dp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:textColor="@color/text_main_color"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_ticket_info" />

            <View
                android:id="@+id/home_game_border_view"
                android:layout_width="58dp"
                android:layout_height="1dp"
                android:layout_marginTop="57dp"
                android:background="@color/border_grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_ticket_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_help_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/home_game_help_info"
                android:textColor="@color/text_black"
                android:textSize="38dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_border_view" />

            <com.ham.onettsix.view.HomeGameHelpLayout
                android:id="@+id/home_game_help_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:home_game_help_title="@string/home_game_help_title_1"
                app:home_game_help_content="@string/home_game_help_content_1"
                app:home_game_help_count="@drawable/looks_1"
                app:layout_constraintTop_toBottomOf="@+id/home_game_help_info"/>

            <com.ham.onettsix.view.HomeGameHelpLayout
                android:id="@+id/home_game_help_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:home_game_help_title="@string/home_game_help_title_2"
                app:home_game_help_content="@string/home_game_help_content_2"
                app:home_game_help_count="@drawable/looks_2"
                app:layout_constraintTop_toBottomOf="@+id/home_game_help_1"/>

            <com.ham.onettsix.view.HomeGameHelpLayout
                android:id="@+id/home_game_help_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:home_game_help_title="@string/home_game_help_title_3"
                app:home_game_help_content="@string/home_game_help_content_3"
                app:home_game_help_count="@drawable/looks_3"
                app:layout_constraintTop_toBottomOf="@+id/home_game_help_2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_help_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_game_get_ticket_btn"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_color_btn_background"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        android:text="@string/home_game_get_ticket_btn"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>