<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_remain_drawing_time_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extra_bold"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/home_remain_drawing_time_title"
                android:textColor="@color/text_black"
                android:textSize="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ham.onettsix.view.RemainTimeView
                android:id="@+id/home_remain_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_remain_drawing_time_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="@string/home_game_info"
                android:textColor="@color/text_black"
                android:textSize="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_remain_time_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_next_update_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="64dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:lineHeight="24dp"
                android:text="@string/home_game_next_update_info"
                android:textColor="@color/text_grey"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_game_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/home_game_price_title"
                android:textColor="@color/text_black"
                android:textSize="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_game_next_update_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_game_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/home_game_price"
                android:textColor="@color/text_black"
                android:textSize="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_game_price_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_profile_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_price" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="@string/home_profile_user_name"
                android:textColor="@color/text_black"
                android:textSize="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_profile_image_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_profile_user_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="@string/home_profile_user_reward"
                android:textColor="@color/text_black"
                android:textSize="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_profile_user_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_profile_user_reward" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_game_get_ticket_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/get_ticket_background"
        android:fontFamily="@font/montserrat_extra_bold"
        android:text="@string/home_game_get_ticket_btn"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>