<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/typing_game_random_start"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/main_color_btn_background"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="@string/typing_game_random_start"
        android:textColor="@color/white_00"
        android:textSize="26dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/typing_game_normal_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />

</androidx.appcompat.widget.LinearLayoutCompat>