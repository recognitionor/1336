<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="50dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp"
    tools:context=".dialog.OneButtonDialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/one_button_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_black"
        android:textSize="24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/one_button_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_black"
        android:textSize="24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/one_button_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_color_selector_btn_background"
        android:gravity="center"
        android:lineHeight="48dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="24dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
