<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:background="@color/main_color"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/typing_game_rank_layout"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:background="@drawable/white_background"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/typing_game_rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/gmarket_sans_ttf_light"
                android:text="@string/typing_game_ranking_title"
                android:textColor="#353535"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="18dp"
                android:ellipsize="end"
                android:fontFamily="@font/gmarket_sans_ttf_bold"
                android:maxLines="1"
                android:text="왕이 넘어지면 킹콩콩콩콩왕이 넘어지면 킹콩콩콩콩왕이 넘어지면 킹콩콩콩콩"
                android:textColor="@color/text_black"
                android:textSize="26dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/typing_game_rank_ic"
                app:layout_constraintTop_toBottomOf="@+id/typing_game_rank_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/typing_game_rank_ic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="20dp"

        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typing_game_total_challenger"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:text="@string/typing_game_total_challenger"
            android:textColor="@color/text_black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typing_game_honorary_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:text="@string/typing_game_honorary_member"
            android:textColor="@color/text_black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typing_game_total_challenger" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typing_game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/home_game_status_background"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="00:00:00"
            android:textColor="@color/white_00"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/typing_game_honorary_member"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typing_game_total_challenger" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/typing_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typing_game_time" />

        <com.ham.onettsix.view.BottomPopupAlert
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
