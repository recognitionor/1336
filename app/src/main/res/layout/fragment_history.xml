<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".LotteryHistoryActivity">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/lottery_history_count"
                android:textColor="@color/text_black"
                android:textSize="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="48dp"
                android:text="@string/lottery_history_title"
                android:textColor="@color/text_black"
                android:textSize="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_winner_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="48dp"
                android:textColor="@color/text_black"
                android:textSize="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:lineHeight="24dp"
                android:visibility="gone"
                android:text="@string/lottery_history_end_date"
                android:textColor="@color/text_gray"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_winner_id" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lottery_history_profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/profile_img_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_end_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="32dp"
                android:textColor="@color/text_black"
                android:textSize="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_profile_img" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_winning_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="20dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lottery_history_winning_price_unit"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_profile_img" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_winning_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="@string/won"
                android:textColor="@color/text_black"
                android:textSize="20dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@+id/lottery_history_winning_price"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_profile_img" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lottery_history_winning_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/main_color_selector_btn_background"
                android:lineHeight="36dp"
                android:visibility="gone"
                android:padding="8dp"
                android:text="@string/lottery_history_winning_btn"
                android:textColor="@color/white"
                android:textSize="28dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_winning_price_unit" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_winning_info_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="75dp"
                android:gravity="center"
                android:lineHeight="24dp"
                android:text="@string/lottery_history_winning_info_message"
                android:textColor="@color/text_gray"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_winning_btn" />

            <View
                android:id="@+id/lottery_history_border"
                android:layout_width="58dp"
                android:layout_height="1dp"
                android:layout_marginTop="43dp"
                android:background="@color/border_gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_winning_info_message" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lottery_history_winner_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineHeight="32dp"
                android:text="@string/lottery_history_list_title"
                android:layout_marginTop="24dp"
                android:textColor="@color/text_black"
                android:textSize="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_border" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lottery_history_winner_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lottery_history_winner_list_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>




