<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_index_tv"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:gravity="center_vertical"
            android:text="4"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/grey_radius_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/bottom_index_tv"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_image"
            app:layout_constraintLeft_toRightOf="@id/bottom_image"
            app:layout_constraintTop_toTopOf="@id/bottom_image">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_user_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/gmarket_sans_ttf_bold"
                android:gravity="center_vertical"
                android:text="코끼리#1"
                android:textColor="@color/text_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_user_record"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/gmarket_sans_ttf_light"
                android:gravity="center_vertical"
                android:text="1000초" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_attend_count"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_radius_background"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/bottom_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottom_image" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>
